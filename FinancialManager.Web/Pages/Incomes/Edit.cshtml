@page "{id:guid}"
@model FinancialManager.Web.Pages.Incomes.EditModel
@{
    ViewData["Title"] = "Editar Receita";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Incomes/Index">Receitas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">✏️ Editar Receita</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Descrição</label>
                            <input asp-for="Input.Description" class="form-control" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Amount" class="form-label">Valor (R$)</label>
                                    <input asp-for="Input.Amount" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="Input.Amount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Date" class="form-label">Data</label>
                                    <input asp-for="Input.Date" type="date" class="form-control" />
                                    <span asp-validation-for="Input.Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Category" class="form-label">Categoria</label>
                            <input asp-for="Input.Category" class="form-control" />
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.BankAccountId" class="form-label">Conta Bancária</label>
                            <select asp-for="Input.BankAccountId" class="form-select">
                                @foreach (var account in Model.BankAccounts)
                                {
                                    <option value="@account.Id">@account.Bank - @account.Type</option>
                                }
                            </select>
                            <span asp-validation-for="Input.BankAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Recurrence" class="form-label">Recorrência</label>
                            <select asp-for="Input.Recurrence" class="form-select">
                                <option value="0">Única</option>
                                <option value="1">Semanal</option>
                                <option value="2">Mensal</option>
                                <option value="3">Anual</option>
                            </select>
                            <span asp-validation-for="Input.Recurrence" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Incomes/Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
