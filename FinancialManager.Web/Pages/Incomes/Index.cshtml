                            <th>DescriÃ§Ã£o</th>
                            <th>Categoria</th>
                            <th>Conta</th>
                            <th>RecorrÃªncia</th>
                            <th class="text-end">Valor</th>
                            <th width="120">AÃ§Ãµes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model.Incomes)
                        {
                            <tr>
                                <td>@income.Date.ToString("dd/MM/yyyy")</td>
                                <td>@income.Description</td>
                                <td><span class="badge bg-info">@income.Category</span></td>
                                <td>@income.BankAccountName</td>
                                <td>
                                    @switch (income.Recurrence)
                                    {
                                        case RecurrenceType.None:
                                            <span class="badge bg-secondary">Ãšnica</span>
                                            break;
                                        case RecurrenceType.Weekly:
                                            <span class="badge bg-info">Semanal</span>
                                            break;
                                        case RecurrenceType.Monthly:
                                            <span class="badge bg-primary">Mensal</span>
                                            break;
                                        case RecurrenceType.Yearly:
