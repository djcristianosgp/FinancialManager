@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Text.Json
@using Microsoft.JSInterop
@attribute [AllowAnonymous]
@layout AuthLayout

@inject HttpClient Http
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-items-center justify-content-center" Style="min-height: 100vh;">
    <MudPaper Elevation="3" Class="pa-8 w-100" Style="max-width: 400px;">
        <div class="text-center mb-6">
            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Large" Color="Color.Primary" Class="mb-2" />
            <MudText Typo="Typo.h4" Class="fw-bold">Financial Manager</MudText>
            <MudText Typo="Typo.body2" Color="Color.Default">Gerencie suas finanças com inteligência</MudText>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                @_errorMessage
            </MudAlert>
        }

        <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="_loginModel.Email"
                         Label="E-mail"
                         InputType="InputType.Email"
                         Variant="Variant.Outlined"
                         Margin="Margin.Dense"
                         FullWidth="true"
                         Class="mb-4"
                         Adornment="Adornment.Start"
                         AdornmentIcon="@Icons.Material.Filled.Email" />

            <MudTextField @bind-Value="_loginModel.Password"
                         Label="Senha"
                         InputType="InputType.Password"
                         Variant="Variant.Outlined"
                         Margin="Margin.Dense"
                         FullWidth="true"
                         Class="mb-6"
                         Adornment="Adornment.Start"
                         AdornmentIcon="@Icons.Material.Filled.Lock" />

            <MudButton ButtonType="ButtonType.Submit"
                      Variant="Variant.Filled"
                      Color="Color.Primary"
                      FullWidth="true"
                      Size="Size.Large"
                      Disabled="@_isLoading"
                      Class="mb-4">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">Entrando...</MudText>
                }
                else
                {
                    <text>Entrar</text>
                }
            </MudButton>
        </EditForm>

        <MudDivider Class="my-4" />

        <div class="text-center">
            <MudText Typo="Typo.body2" Color="Color.Default">
                Não tem conta?
                <MudLink Href="/register" Class="font-weight-bold">
                    Criar conta
                </MudLink>
            </MudText>
        </div>
    </MudPaper>
</MudContainer>

@code {
    private LoginModel _loginModel = new();
    private string _errorMessage = string.Empty;
    private bool _isLoading = false;

    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    private async Task HandleLogin()
    {
        _errorMessage = string.Empty;
        _isLoading = true;

        try
        {
            var loginRequest = new { _loginModel.Email, _loginModel.Password };
            var response = await Http.PostAsJsonAsync("api/auth/login", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Login realizado com sucesso!", Severity.Success);
                var redirectUrl = !string.IsNullOrEmpty(ReturnUrl) ? ReturnUrl : "/";
                await Task.Delay(2000);
                try
                {
                    // Usar função JavaScript para fazer o redirect
                    await JS.InvokeVoidAsync("navigationHelper.redirectTo", redirectUrl);
                }
                catch (Exception jsEx)
                {
                    Console.WriteLine($"Erro ao chamar função JavaScript: {jsEx.Message}");
                    // Fallback para NavigationManager se JavaScript falhar
                    Navigation.NavigateTo(redirectUrl, true);
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                var content = await response.Content.ReadAsStringAsync();
                var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                using var doc = JsonDocument.Parse(content);
                var message = doc.RootElement.GetProperty("message").GetString();
                _errorMessage = message ?? "E-mail ou senha incorretos.";
            }
            else
            {
                _errorMessage = "Erro ao tentar fazer login. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erro ao tentar fazer login: {ex.Message}";
            Snackbar.Add(_errorMessage, Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "E-mail é obrigatório")]
        [EmailAddress(ErrorMessage = "E-mail inválido")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Senha é obrigatória")]
        [MinLength(6, ErrorMessage = "Senha deve ter no mínimo 6 caracteres")]
        public string Password { get; set; } = string.Empty;
    }
}
