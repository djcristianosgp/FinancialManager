@page "{id:guid}"
@model FinancialManager.Web.Pages.Expenses.EditModel
@{
    ViewData["Title"] = "Editar Despesa";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Expenses/Index">Despesas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">‚úèÔ∏è Editar Despesa</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Descri√ß√£o</label>
                            <input asp-for="Input.Description" class="form-control" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Amount" class="form-label">Valor (R$)</label>
                                    <input asp-for="Input.Amount" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="Input.Amount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Date" class="form-label">Data</label>
                                    <input asp-for="Input.Date" type="date" class="form-control" />
                                    <span asp-validation-for="Input.Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Category" class="form-label">Categoria</label>
                            <input asp-for="Input.Category" class="form-control" />
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PaymentMethod" class="form-label">Forma de Pagamento</label>
                            <select asp-for="Input.PaymentMethod" class="form-select" id="paymentMethodSelect">
                                <option value="0">üíµ Dinheiro</option>
                                <option value="1">üí≥ D√©bito</option>
                                <option value="2">üí≥ Cr√©dito</option>
                            </select>
                            <span asp-validation-for="Input.PaymentMethod" class="text-danger"></span>
                        </div>

                        <!-- Campo para Conta Banc√°ria -->
                        <div class="mb-3" id="bankAccountField">
                            <label asp-for="Input.BankAccountId" class="form-label">Conta Banc√°ria</label>
                            <select asp-for="Input.BankAccountId" class="form-select">
                                <option value="">Selecione uma conta</option>
                                @foreach (var account in Model.BankAccounts)
                                {
                                    <option value="@account.Id">@account.Bank - @account.Type</option>
                                }
                            </select>
                            <span asp-validation-for="Input.BankAccountId" class="text-danger"></span>
                        </div>

                        <!-- Campo para Cart√£o de Cr√©dito -->
                        <div class="mb-3" id="creditCardField">
                            <label asp-for="Input.CreditCardId" class="form-label">Cart√£o de Cr√©dito</label>
                            <select asp-for="Input.CreditCardId" class="form-select">
                                <option value="">Selecione um cart√£o</option>
                                @foreach (var card in Model.CreditCards)
                                {
                                    <option value="@card.Id">@card.Name - @card.Bank</option>
                                }
                            </select>
                            <span asp-validation-for="Input.CreditCardId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Status" class="form-label">Status</label>
                            <select asp-for="Input.Status" class="form-select">
                                <option value="0">‚è≥ Pendente</option>
                                <option value="1">‚úÖ Pago</option>
                            </select>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Expenses/Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Salvar Altera√ß√µes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paymentMethodSelect = document.getElementById('paymentMethodSelect');
            const bankAccountField = document.getElementById('bankAccountField');
            const creditCardField = document.getElementById('creditCardField');

            function togglePaymentFields() {
                const paymentMethod = parseInt(paymentMethodSelect.value);
                
                if (paymentMethod === 2) { // Credit
                    bankAccountField.style.display = 'none';
                    creditCardField.style.display = 'block';
                } else { // Cash or Debit
                    bankAccountField.style.display = 'block';
                    creditCardField.style.display = 'none';
                }
            }

            paymentMethodSelect.addEventListener('change', togglePaymentFields);
            togglePaymentFields(); // Initialize on page load
        });
    </script>
}
