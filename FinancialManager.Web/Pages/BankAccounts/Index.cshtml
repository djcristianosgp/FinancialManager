@page
@using FinancialManager.Domain.Enums
@model FinancialManager.Web.Pages.BankAccounts.IndexModel
@{
    ViewData["Title"] = "Contas Banc√°rias";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>üè¶ Contas Banc√°rias</h1>
    <a href="/bankaccounts/create" class="btn btn-primary">+ Nova Conta</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @if (!Model.BankAccounts.Any())
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <p class="text-muted">Nenhuma conta banc√°ria cadastrada.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        @foreach (var account in Model.BankAccounts)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@account.Bank</h5>
                        <p class="text-muted mb-3">
                            @switch (account.Type)
                            {
                                case AccountType.Checking:
                                    <span class="badge bg-primary">Corrente</span>
                                    break;
                                case AccountType.Savings:
                                    <span class="badge bg-success">Poupan√ßa</span>
                                    break;
                                case AccountType.Digital:
                                    <span class="badge bg-info">Digital</span>
                                    break;
                            }
                        </p>
                        <h3 class="@(account.Balance >= 0 ? "text-success" : "text-danger")">
                            @account.Balance.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                        </h3>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a href="/bankaccounts/details/@account.Id" class="btn btn-sm btn-outline-primary flex-fill">Detalhes</a>
                            <a href="/bankaccounts/edit/@account.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@account.Id" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Confirma exclus√£o?')">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5>Saldo Total</h5>
                <h2 class="@(Model.BankAccounts.Sum(a => a.Balance) >= 0 ? "text-success" : "text-danger")">
                    @Model.BankAccounts.Sum(a => a.Balance).ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                </h2>
            </div>
        </div>
    </div>
</div>
