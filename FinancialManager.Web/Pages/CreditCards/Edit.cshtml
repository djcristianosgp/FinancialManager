@page "{id:guid}"
@model FinancialManager.Web.Pages.CreditCards.EditModel
@{
    ViewData["Title"] = "Editar Cartão de Crédito";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/CreditCards/Index">Cartões de Crédito</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">✏️ Editar Cartão de Crédito</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Nome do Cartão</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Bank" class="form-label">Banco Emissor</label>
                            <input asp-for="Input.Bank" class="form-control" />
                            <span asp-validation-for="Input.Bank" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Limit" class="form-label">Limite (R$)</label>
                            <input asp-for="Input.Limit" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Input.Limit" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.ClosingDay" class="form-label">Dia de Fechamento</label>
                                    <input asp-for="Input.ClosingDay" type="number" class="form-control" />
                                    <span asp-validation-for="Input.ClosingDay" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.DueDay" class="form-label">Dia de Vencimento</label>
                                    <input asp-for="Input.DueDay" type="number" class="form-control" />
                                    <span asp-validation-for="Input.DueDay" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/CreditCards/Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
